{% extends 'base.html.twig' %}

{% block title %}Book | {{ book.title }}{% endblock %}

{% block body %}
    <div class="row text-center mt-5">
        <h2>{{ book.title }}</h2>
        <small>{{ book.author }}</small>
    </div>
    <div class="row mt-4">
        <p>
            {{ book.resume }}
        </p>
        <small> {{ book.datePublished|date("d/m/Y") }} </small>
    </div>


    <div class="row mt-5" >
        <h4>Ajouter un commentaire</h4>
        <div class="row mt-4">
            <div class="col-6 offset-3">
                {{form(commentForm)}}
            </div>
        </div>
    </div>


    <div class="row mt-5" >
        <ul>
            {% for comment in book.comments %}
                <li> {{comment.content}} - {{comment.dateCreated|date("d-m-Y")}} </li>
            {% endfor %}
        </ul>
    </div>    

{% endblock %}